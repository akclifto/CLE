@using Microsoft.AspNetCore.Components.Web
@using WebTut.Website.Models
@using WebTut.Website.Services
@inject JsonFileProductService ProductService


<!--This div will run everytime.  -->
<div class="card-columns">
    @foreach (var product in ProductService.GetProducts())
    {
        <div class="card">
            <div class="card-img" style="background-image:url('@product.Image');">
                <div class=" card-body">
                    <h5 class=" card-title">
                        @product.Title
                    </h5>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                <button @onclick="(e => SelectProduct(product.Id))"
                        data-toggle="modal" data-target="#productModal" class="btn btn-primary"
                        >More Info</button>
            </small>
        </div>
    }
</div>

<!--This div will run as a pop up when we click the "More info" button -->
<div>

</div>



@code {
    Product selectProduct;
    string selectedProductId;


    void SelectProduct(string productId)
    {
        selectedProductId = productId;
        selectProduct = ProductService.GetProducts().First(x => x.Id == productId);
    }
}
